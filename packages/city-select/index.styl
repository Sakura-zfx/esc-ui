.esc-city-select
  position relative
  &__title
    display flex
    align-items center
    height 40px
    background #fff
    font-size 12px
    border-bottom 1px #eee solid
  &__title-item
    position relative
    display flex
    text-align center
    align-items center
    height 100%
    padding 0 10px
    color #666
    &--active
      position absolute
      height 2px
      left 10px
      right 10px
      background red
      bottom 0
      border-radius 2px
  &__loading
    text-align center
    font-size 12px
    padding-top 20px
    color #999
  &__item
    padding 10px
    border-bottom 1px #eee solid
    color #333
    font-size 12px
    &:active
      background #f2f2f2
  &__content
    min-height 150px
    background #fff
    font-size 14px
    overflow auto
    -webkit-overflow-scrolling touch
    height calc(100% - 40px)
