.esc-page-button
  position fixed
  display flex
  align-items center
  bottom 0
  left 0
  width 100%
  z-index 10
  box-shadow:0px -2px 2px rgba(0,0,0,0.05)
  height 60px
  padding 0 15px
  background-color #fff
  .esc-button
    display flex
    justify-content center
    flex-grow 1
    height 40px
    line-height 38px
    &:not(:last-child)
      margin-right 15px
    &__text
      font-size 16px

