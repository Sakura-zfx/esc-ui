.esc-skeleton
  display flex
  margin 0 15px
  &__block
    background-color #f2f3f5
    animation esc-skeleton-blink 1s ease-in-out infinite
    margin-right 15px
  &__strip
    flex-grow 1
    &--item
      height 14px
      background-color #f2f3f5
      margin-bottom 10px
      animation esc-skeleton-blink 1s ease-in-out infinite

@keyframes esc-skeleton-blink {
  50% {
    opacity: .6;
  }
}
