.esc-toast
  position fixed
  border-radius 4px
  overflow hidden
  padding 8px 12px
  width fit-content
  max-width 80%
  min-width 100px
  display flex
  justify-content center
  align-items center
  top 50%
  left 50%
  transform translate3d(-50%, -50%, 0)
  background-color rgba(0,0,0,.7)
  color #fff
  font-size 14px
  word-break break-all
  box-sizing content-box
  //&__text
  //  text-align center
.fade-enter-active, .fade-leave-active
  transition: opacity .3s

.fade-enter, .fade-leave-to
  opacity: 0;
