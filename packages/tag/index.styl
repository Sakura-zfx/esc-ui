.esc-tag
  display inline-block
  vertical-align middle
  border-radius 2px
  &__normal
    font-size 12px
    line-height 12px
    padding 3px 6px
  &__large
    font-size 14px
    line-height 14px
    padding 5px 8px
  &__default
    background #f2f2f2
    color #5C626B
  &__success
    background rgba(45,200,136,0.15)
    color #2DC888
  &__danger
    background rgba(#FF4D4D, 0.1)
    color #FF4D4D
  &__info
    background rgba(#2769FF, 0.1)
    color #2769FF
